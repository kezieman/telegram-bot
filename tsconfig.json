{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "baseUrl": "./",                                  /* Specify the base directory to resolve non-relative module names. */
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}